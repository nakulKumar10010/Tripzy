<style>
  /* Container for alignment */
  .search-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Search Input */
  .search-inp {
    border: 1.5px solid #e0e0e0;
    border-radius: 50px;
    padding: 0.6rem 1.5rem;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.3s, box-shadow 0.3s;
    width: 300px;
  }

  .search-inp:focus {
    border-color: #f2424d;
    box-shadow: 0 0 0 3px rgba(242, 66, 77, 0.2);
  }

  /* Search Button */
  .search-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #f2424d;
    color: white;
    border: none;
    border-radius: 50px;
    padding: 0.6rem 1.5rem;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .search-btn:hover {
    background-color: #d93641;
  }

  .search-btn i {
    font-size: 1rem;
  }
</style>


<nav class="navbar navbar-expand-md bg-body-light sticky-top">
    <!-- making sticky top -->
    <!--change the color by changing and writing light-->
  <div class="container-fluid">
    <!-- adding icon on top removinng all listing name -->
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!--modifying options and chamging ref-->
        <a class="nav-link"  href="/">Home</a>
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
            <form class="d-flex" role="search">
              <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" aria-label="Search"/>
              <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
            </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Start Hosting</a>
        <% if (!currUser){ %>
          <a class="nav-link"  href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <%}%>
        <% if (currUser){ %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <%}%>
      </div>
    </div>
  </div>
</nav>


